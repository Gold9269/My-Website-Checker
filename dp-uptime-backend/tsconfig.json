{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["./**/*.ts", "tools/scan-routes.mjs", "index.js"]
}

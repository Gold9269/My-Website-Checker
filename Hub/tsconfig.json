{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "../dp-uptime-backend/**/*"]
}
